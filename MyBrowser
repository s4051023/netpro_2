    class WebThread extends Thread {

        String name;
        URL verifiedUrl;
        JEditorPane jEditorPane;
        JEditorPane status;

        WebThread(String name,String urltxt, JEditorPane jEditorPane, JEditorPane status) {
            this.name = name;
            this.jEditorPane = jEditorPane;
            this.status = status;
            verifiedUrl = verifyUrl(urltxt);
            if (verifiedUrl == null) {
                JOptionPane.showMessageDialog(null, "INVALID URL", "ERROR", JOptionPane.ERROR_MESSAGE);
                this.destroy();
            }
        }
        @Override
        public void run() {
            String st = name +"\n" +"Start\n";
            status.setText(st);
            setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            try {
                URLConnection conn = verifiedUrl.openConnection();
                Map<String, List<String>> map = conn.getHeaderFields();
                
                st += "Printing Response Header...\n";
                
                for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                    st += entry.getKey() +":"+entry.getValue()+"\n";
                }

                st += "\nGet Response Header By Key ...\n";
                String server = conn.getHeaderField("Server");

                if (server == null) {
                    st += "Key 'Server' is not found!";
                } else {
                    st += "Server - " + server;
                }
                st += "\n Done";
            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            }
            
            status.setText(st);
            
            try {
                jEditorPane.setPage(verifiedUrl);
            } catch (IOException e) {
                // Show error messsage.
                JOptionPane.showMessageDialog(null, e.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            } finally {
                // Return to default cursor.
                setCursor(Cursor.getDefaultCursor());
                st += "\n" + name + " Stop";
                status.setText(st);
            }
        }
    }
    private URL verifyUrl(String url) {
            URL verifiedUrl = null;
            try {
                verifiedUrl = new URL(url);
            } catch (MalformedURLException e) {
                return null;
            }
            return verifiedUrl;
        }

